<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cat_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/like_img_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <ImageButton
                    android:id="@+id/favorite_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/like_img_btn"
                    app:layout_constraintEnd_toEndOf="@+id/like_img_btn"
                    app:layout_constraintStart_toEndOf="@+id/cat_img"
                    app:layout_constraintStart_toStartOf="@+id/like_img_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/background"
                    app:srcCompat="@drawable/ic_bookmark_off_24" />

                <ImageButton
                    android:id="@+id/like_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/background"
                    app:srcCompat="@drawable/ic_thumb_up_off_24" />

                <ImageButton
                    android:id="@+id/dislike_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/like_img_btn"
                    app:layout_constraintStart_toEndOf="@+id/cat_img"
                    app:layout_constraintStart_toStartOf="@+id/like_img_btn"
                    app:layout_constraintTop_toBottomOf="@+id/like_img_btn"
                    android:backgroundTint="@color/background"
                    app:srcCompat="@drawable/ic_thumb_down_off_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
</layout>